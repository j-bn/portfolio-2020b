	@extend .text-shadow

	padding: 2rem
	display: flex
	flex-direction: column
	
	h2
		font-size: 1rem
		color: rgba(white, 0.5)

iframe#portal
	border: none
	border-radius: 0.5rem
	flex-grow: 1
	width: 100%
	margin-top: 1rem
	box-shadow: 0 0.2rem 0.5rem rgba(black, 0.5)